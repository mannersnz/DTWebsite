---
// About - Bold split layout with trust elements
interface TrustElement {
  icon: string;
  headline: string;
  description: string;
}

const trustElements: TrustElement[] = [
  {
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" /></svg>`,
    headline: "Vendor Agnostic",
    description: "We recommend what works for you, not what earns us commissions."
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
    headline: "Practical Experience",
    description: "Years of IT consulting means we understand business realities, not just tech possibilities."
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`,
    headline: "Local Understanding",
    description: "Based in New Zealand, we know the local business landscape and work in your timezone."
  }
];
---

<section id="about" class="relative py-24 md:py-32 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-[var(--color-surface)]"></div>

  <!-- Diagonal stripes accent -->
  <div class="absolute top-0 right-0 w-1/3 h-full diagonal-stripes opacity-30"></div>

  <!-- Geometric elements -->
  <div class="absolute bottom-20 left-10 w-32 h-32 border border-[var(--color-accent)]/20 rotate-12"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24">
      <!-- Left - Story -->
      <div>
        <div class="flex items-center gap-4 mb-6">
          <span class="text-[var(--color-accent)] font-display text-sm uppercase tracking-[0.3em]">About Us</span>
          <div class="w-12 h-[1px] bg-[var(--color-accent)]"></div>
        </div>

        <h2 class="font-display font-bold text-4xl md:text-5xl text-white mb-8">
          Your trusted
          <span class="text-gradient"> AI advisor</span>
        </h2>

        <div class="space-y-6 text-lg text-[var(--color-text-secondary)] leading-relaxed">
          <p>
            Digital Tempo has been helping New Zealand businesses navigate technology for years.
            Now, we're focused on what matters most: helping you harness the power of AI tools
            to <span class="text-white">work smarter, not harder</span>.
          </p>
          <p>
            We're not here to sell you complex AI systems or research projects. We're here to
            show you practical ways to use AI tools like ChatGPT, Claude, Gemini, Copilot, and others to get
            <span class="text-[var(--color-accent)]">real results â€” quickly</span>.
          </p>
        </div>

        <!-- Tempo wave decoration -->
        <div class="mt-12 flex items-center gap-6">
          <div class="tempo-wave">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
          </div>
          <span class="text-sm text-[var(--color-text-muted)] uppercase tracking-wider">Setting the tempo for AI success</span>
        </div>
      </div>

      <!-- Right - Trust elements -->
      <div class="space-y-6">
        {trustElements.map((element, index) => (
          <div class="group relative bg-[var(--color-surface-elevated)] border border-[var(--color-border)] p-6 transition-all duration-500 hover:border-[var(--color-accent)]/50">
            <!-- Accent line -->
            <div class="absolute left-0 top-0 w-1 h-0 bg-[var(--color-accent)] group-hover:h-full transition-all duration-500"></div>

            <div class="flex gap-5">
              <!-- Icon -->
              <div class="w-12 h-12 flex items-center justify-center bg-[var(--color-accent)]/10 text-[var(--color-accent)] flex-shrink-0 group-hover:bg-[var(--color-accent)] group-hover:text-[var(--color-base)] transition-all duration-500">
                <Fragment set:html={element.icon} />
              </div>

              <!-- Content -->
              <div>
                <h3 class="font-display font-bold text-xl text-white mb-2 group-hover:text-[var(--color-accent)] transition-colors duration-300">
                  {element.headline}
                </h3>
                <p class="text-[var(--color-text-secondary)]">
                  {element.description}
                </p>
              </div>
            </div>
          </div>
        ))}

        <!-- Extra CTA -->
        <div class="pt-6">
          <a href="#contact" class="group inline-flex items-center gap-3 text-[var(--color-accent)] font-display font-semibold uppercase tracking-wider text-sm hover:gap-5 transition-all duration-300">
            Start a conversation
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
