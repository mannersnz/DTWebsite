---
// Footer component with contact information
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-800 text-white">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <!-- Contact Information -->
      <div class="space-y-2">
        <h3 class="text-lg font-semibold text-white">Get in Touch</h3>
        <div class="space-y-1 text-gray-300">
          <p>
            <a href="mailto:hello@digitaltempo.nz" class="hover:text-white transition-colors">
              hello@digitaltempo.nz
            </a>
          </p>
          <p>
            <a href="tel:+6421567119" class="hover:text-white transition-colors">
              +64 21 567119
            </a>
          </p>
        </div>
      </div>

      <!-- Copyright -->
      <div class="text-gray-400 text-sm">
        <p>&copy; {currentYear} Digital Tempo. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>
